    					<div class="thumbnail">
    						<img src="https://www.trustedchoice.com/content/dam/trustedchoice/CarrierProfiles/nationwide-1200x1224.jpg" alt=""/>
    					</div>
    					<div class="icerik-bilgi">
    						<input type="text" name="title" class="form-control" value="Nationwide Insurance  $30" />
    						<br>
    						<button data-toggle="collapse" href="#collapse1" class="btn btn-success">Advantages</button> &nbsp;
    						<a><button class="btn btn-info">Call Agent</button></a> &nbsp; <a><button class="btn btn-info">Go To Website</button></a><p>
                            <div id="collapse1" class="panel-collapse collapse">
                                <br>
                                <li class="list-group-item">One</li>
                                <li class="list-group-item">Two</li>
                                <li class="list-group-item">Three</li>
                                <li class="list-group-item">Two</li>
                                <li class="list-group-item">Three</li>
                            </div>
        				 </div>
    				</div>
    			</div>
    		</div>
        </div>
        <div class="col-xs-5 col-sm-5 col-lg-5">
    	    <div class="panel panel-default">
    		    <div class="panel-body">
    				<div class="col-md-12">
    					<div class="icerik-bilgi">
    					    <p>Choose lead types: Auto</p>
                            <label for="birthdate" class="btn btn-info">Birthdate<input type="checkbox" id="birthdate" class="badgebox"><span class="badge">&check;</span></label>
                            <label for="creditscore" class="btn btn-info">Credit Score<input type="checkbox" id="creditscore" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="maritalstatus" class="btn btn-info">Marital Status<input type="checkbox" id="maritalstatus" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="gender" class="btn btn-info">Gender<input type="checkbox" id="gender" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="accident" class="btn btn-info">Accident<input type="checkbox" id="accident" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="traffictickets" class="btn btn-info">Taffic Tickets(Last 5 years)<input type="checkbox" id="traffictickets" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="vehiclelocation" class="btn btn-info">Vehicle Location<input type="checkbox" id="vehiclelocation" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="primaryuse" class="btn btn-info">Primary Use<input type="checkbox" id="primaryuse" class="badgebox"><span class="badge">&check;</span></label>
    					    <label for="olr" class="btn btn-info">Own/Lease/Finance<input type="checkbox" id="olr" class="badgebox"><span class="badge">&check;</span></label>
